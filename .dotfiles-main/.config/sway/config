set $copy_screen_whole ~/.local/bin/copy_screen_wayland
set $screenclip slurp | grim -g - ~/Images/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png
set $background $(cat ~/.cache/wal/wal)


